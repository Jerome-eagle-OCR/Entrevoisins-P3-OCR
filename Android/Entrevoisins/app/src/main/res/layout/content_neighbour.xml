<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.neighbour_list.NeighbourDetailActivity"
    tools:showIn="@layout/activity_neighbour_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="?android:attr/colorBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/neighbour_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="?android:attr/colorBackground"
                    android:elegantTextHeight="true"
                    android:elevation="0.7dp"
                    android:gravity="bottom"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="24sp"
                    tools:text="Caroline" />

                <TextView
                    android:id="@+id/neighbour_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="16dp"
                    app:drawableTint="@color/colorAccent"
                    android:gravity="center|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    tools:text="Saint pierre du mont à 5km" />

                <TextView
                    android:id="@+id/neighbour_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    app:drawableStartCompat="@drawable/ic_baseline_local_phone_24"
                    android:drawablePadding="16dp"
                    app:drawableTint="@color/colorAccent"
                    android:gravity="center|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    tools:text="+33 6 86 57 90 14" />

                <TextView
                    android:id="@+id/neighbour_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    app:drawableStartCompat="@drawable/ic_baseline_language_24"
                    android:drawablePadding="16dp"
                    app:drawableTint="@color/colorAccent"
                    android:elegantTextHeight="false"
                    android:fontFamily="sans-serif"
                    android:freezesText="false"
                    android:gravity="center|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    tools:text="www.facebook.fr/caroline" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="?android:attr/colorBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="top"
                    android:background="?android:attr/colorBackground"
                    android:elegantTextHeight="true"
                    android:elevation="0.7dp"
                    android:gravity="bottom"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/about_me"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/neighbour_aboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    tools:text="Bonjour !Je souhaiterais faire de la marche nordique. Pas initiée, je recherche une ou plusieurs personnes susceptibles de m'accompagner !J'aime les jeux de cartes tels la belote et le tarot..\n" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>